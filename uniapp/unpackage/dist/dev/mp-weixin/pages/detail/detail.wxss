
.category-item {
		padding: 15rpx;
		background-color: #eee;
		border-bottom: 2rpx solid #fff;
}
	
/* 商品 */
.category-active {
		background-color: #fff;
		color: RoyalBlue;
		border-left: 5rpx solid RoyalBlue;
}
	
/*折扣 */
.mini-btn {
		border: 2rpx solid orangered;
		padding: 0 4rpx;
		font-size: 22rpx;
		color: orangered;
		border-radius: 5rpx;
		font-weight: bold;
}
	
/* 选购 */
.mini-btn-fill {
		background-color: orange;
		padding: 0 4rpx;
		color: #fff;
		font-size: 24rpx;
		border-radius: 5rpx;
}
.active {
		background-color:#87CEFA;
}

